<div class="wave-container">
  <%= image_tag asset_path('bg-wave.svg'), class: 'wave' %>
</div>

<section id="news" class="section-news">
  <div class="section">
    <div class="news-content">
      <div class="column-left">
        <h2><%= I18n.t 'landingpage.news.mentionedus' %> </h2>
        <%= render partial: "publications", collection: @publications %>
      </div>

      <div class="column-right">
        <h2><%= I18n.t 'landingpage.news.title' %> </h2>
        <%= render partial: "news", collection: @news %>
      </div>
    </div>
  </div>

</section>

<div class="wave-container">
