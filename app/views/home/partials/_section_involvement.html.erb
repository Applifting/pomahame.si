<div class="wave-container">
  <%= image_tag asset_path('bg-wave.svg'), class: 'wave' %>
</div>

<section id="involvement" class="section-involvement">
  <div class="section">
    <h2>Kdo je do projektu zapojen</h2>
    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s4">
            <a class="link" href="#tab-partners">Partneři</a>
          </li>
          <li class="tab col s4">
            <a class="active link" href="#tab-organizations">Dobročinné organizace</a>
          </li>
          <li class="tab col s4">
            <a class="link" href="#tab-development-team">Projektový tým</a>
          </li>
        </ul>
      </div>
      <div id="tab-partners" class="tab-content">
        <div class="logos-container">
          <% @partner_logos.each do |partner| %>
            <%= content_tag(:div, link_to(image_tag(asset_path(partner[:logo], alt: partner[:alt], title: partner[:title])), partner[:url], target: '_blank'), class: 'partner-logo') %>
          <% end %>
        </div>
      </div>
      <div id="tab-organizations" class="tab-content">
        <div class="logos-container">
          <%= content_tag(:div, link_to(image_tag(asset_path('logo-charita.svg', alt: 'dobrovolnická organizace zapojená do pomuzeme.si', title: 'Městská Charita Čské Budějovice')), 'https://mchcb.cz', target: '_blank'), class: 'partner-logo') %>
          <%= content_tag(:div, link_to(image_tag(asset_path('logo-diakonie.svg', alt: 'dobrovolnická organizace zapojená do pomuzeme.si', title: 'Diakonie ČCE')), 'https://www.diakonie.cz/', target: '_blank'), class: 'partner-logo') %>
          <%= content_tag(:div, link_to(image_tag(asset_path('logo-duhovy-tandem.svg', alt: 'dobrovolnická organizace zapojená do pomuzeme.si', title: 'Duhový Tandem')), 'http://duhovytandem.cz/', target: '_blank'), class: 'partner-logo') %>
          <%= content_tag(:div, link_to(image_tag(asset_path('logo-hero-clan.svg', alt: 'dobrovolnická organizace zapojená do pomuzeme.si', title: 'Hero Clan')), 'https://www.heroclan.cz', target: '_blank'), class: 'partner-logo') %>
        </div>
      </div>
      <div id="tab-development-team" class="tab-content">
        <div class="intro">
          <p>Tento projekt by nevznikl bez úsilí mnoha dobrovolníků. Všem moc děkujeme.</p>
        </div>
        <div class="developers">
          <% @project_volunteers.each do |volunteer| %>
            <div class="developer">
              <%= image_tag asset_path('volunteers/' + volunteer.fetch(:photo, :generic)), class: 'photo' %>
              <h4 class="name">
                <% if volunteer[:url].present? %>
                    <a href="<%= volunteer[:url] %>" target="_blank"><%= volunteer[:name] %></a>
                <% else%>
                    <%= volunteer[:name] %>
                <% end %>
              </h4>
              <p class="role"><%= volunteer[:role] %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="wave-container">
  <%= image_tag asset_path('bg-wave.svg'), class: 'wave bottom' %>
</div>