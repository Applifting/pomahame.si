<section class="section-hero section">
  <div class="hero-content" style="flex-direction: column;">
    <%= render partial: 'volunteer_profiles/navigation' if @current_volunteer %>

    <h2>Žádosti o pomoc</h2>
    <%= render partial: 'common/flash' %>

    <%= render partial: 'requests/search_form' %>

    <% if @closest_request_km %>
      <div id="closest_request" value="<%= @closest_request_km %>"></div>
    <% end %>
    <div class="table border-bottom">
      <% @requests.each do |request| %>
        <%= render partial: 'request_with_button', locals: { request: request } %>
      <% end %>
    </div>
  </div>
</section>
