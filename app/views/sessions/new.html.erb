<section class="section-hero section">
  <div class="hero-content">
    <div class="column-left">
      <h2><%= I18n.t "volunteer_profile.#{@action}.title" %></h2>
      <p><%= I18n.t "volunteer_profile.#{@action}.description" %></p>
      <%= form_tag request_code_path, method: :post, remote: false do |f| %>
        <%= label_tag :phone, "Telefonní číslo" %>
        <%= hidden_field_tag :redirect_to, params[:redirect_to] %>
        <%= text_field_tag :phone, @session.phone || '+420', required: true %>
        <div class="error-list">
          <ul>
          <% @session&.errors.messages.values.flatten.compact.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        <%= submit_tag 'Přihlásit', class: 'main-button' %>
      <% end %>

      <button id="cta-nemam-registraci" class="modal-button modal-trigger main-button tertiary" data-target="registration" aria-haspopup="true">
        nemám registraci
      </button>

    </div>
  </div>
</section>

<%= render 'home/modals/registration' %>
<%= render 'home/modals/confirmation' %>
<%= render 'home/modals/thank_you' %>